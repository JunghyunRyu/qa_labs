# Application
APP_NAME=QA-Arena API
APP_VERSION=0.1.0
DEBUG=False

# Database
DATABASE_URL=postgresql://qa_arena_user:qa_arena_password@localhost:5432/qa_arena

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# LLM / AI - GPT-5.2 (2024.12 업그레이드)
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-5.2
OPENAI_REASONING_MODEL=gpt-5.2
OPENAI_REASONING_EFFORT=medium
# Reasoning effort options: none, low, medium, high, xhigh (GPT-5.2 신규)
OPENAI_DEFAULT_VERBOSITY=medium
# Verbosity options: low, medium, high (GPT-5.2 신규)
OPENAI_COMPACTION_ENABLED=true
# GPT-5.2 컨텍스트 압축 기능 활성화 (긴 세션에서 유용)

# Worker Monitoring
WORKER_MONITOR_ENABLED=true
WORKER_MONITOR_INTERVAL_SECONDS=30
WORKER_DOWN_THRESHOLD=3

# Slack Alert
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ALERT_ENABLED=true
SLACK_ALERT_ON_RECOVERY=true

# Environment (development, staging, production)
ENVIRONMENT=production
